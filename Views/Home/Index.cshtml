    <script>
        document.addEventListener('DOMContentLoaded', function () {
            document.getElementById('btnSeConnecter').addEventListener('click', function () {
                var selectedRole = document.querySelector('input[name="role"]:checked');

                if (!selectedRole) {
                    alert('Veuillez sélectionner un rôle.');
                    return;
                }

                var roleValue = selectedRole.value;

                if (roleValue === 'admins') {
                    document.getElementById('adminLoginContainer').style.display = 'block';
                    document.getElementById('membreLoginContainer').style.display = 'none';
                    document.getElementById('organisateurLoginContainer').style.display = 'none';
                } else if (roleValue === 'membres') {
                    document.getElementById('membreLoginContainer').style.display = 'block';
                    document.getElementById('adminLoginContainer').style.display = 'none';
                    document.getElementById('organisateurLoginContainer').style.display = 'none';
                } else if (roleValue === 'organisateurs') {
                    document.getElementById('organisateurLoginContainer').style.display = 'block';
                    document.getElementById('adminLoginContainer').style.display = 'none';
                    document.getElementById('membreLoginContainer').style.display = 'none';
                } else if (roleValue === 'visiteurs') {
                    // Redirect to "events/liste" for visitors
                    window.location.href = '/events/liste';
                } else {
                    // Redirection vers l'index en fonction du rôle sélectionné
                    window.location.href = '/' + roleValue + '/index';
                }
            });

            document.getElementById('btnLoginAdmin').addEventListener('click', function () {
                var email = document.getElementById('emailAdmin').value;
                var password = document.getElementById('passwordAdmin').value;

                fetch(`/admins/login?email=${email}&password=${password}`, {
                    method: 'POST'
                })
                    .then(response => {
                        if (response.ok) {
                            window.location.href = '/admins/index';
                        } else {
                            alert('Email ou mot de passe incorrect. Veuillez réessayer.');
                        }
                    })
                    .catch(error => {
                        console.error('Erreur lors de la connexion:', error);
                    });
            });

            document.getElementById('btnLoginMembre').addEventListener('click', function () {
                var email = document.getElementById('emailMembre').value;
                var password = document.getElementById('passwordMembre').value;

                fetch(`/membres/login?email=${email}&password=${password}`, {
                    method: 'POST'
                })
                    .then(response => {
                        if (response.ok) {
                            window.location.href = '/membres/index';
                        } else {
                            alert('Email ou mot de passe incorrect. Veuillez réessayer.');
                        }
                    })
                    .catch(error => {
                        console.error('Erreur lors de la connexion:', error);
                    });
            });

            document.getElementById('btnLoginOrganisateur').addEventListener('click', function () {
                var email = document.getElementById('emailOrganisateur').value;
                var password = document.getElementById('passwordOrganisateur').value;

                fetch(`/organisateurs/login?email=${email}&password=${password}`, {
                    method: 'POST'
                })
                    .then(response => {
                        if (response.ok) {
                            window.location.href = '/organisateurs/index';
                        } else {
                            alert('Email ou mot de passe incorrect. Veuillez réessayer.');
                        }
                    })
                    .catch(error => {
                        console.error('Erreur lors de la connexion:', error);
                    });
            });
        });
        $(document).ready(function () {
            // Activate tooltip
            $('[data-toggle="tooltip"]').tooltip();

            // Select/Deselect checkboxes
            var checkbox = $('table tbody input[type="checkbox"]');
            $("#selectAll").click(function () {
                if (this.checked) {
                    checkbox.each(function () {
                        this.checked = true;
                    });
                } else {
                    checkbox.each(function () {
                        this.checked = false;
                    });
                }
            });
            checkbox.click(function () {
                if (!this.checked) {
                    $("#selectAll").prop("checked", false);
                }
            });
        });
    </script>
