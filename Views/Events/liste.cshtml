@model IEnumerable<ahmedHanen.Models.Event>

@{
    ViewData["Title"] = "Index";
}

<head>
    <link rel="stylesheet" href="/css/site.css" />
    <style>
        /* Add your custom styles here */
        body {
            font-family: 'Varela Round', sans-serif; /* Use the custom font from the template */
            color: rgba(6, 12, 34, 0.98);
            ;
            background: #f5f5f5;
            font-size: 13px;
        }

        h1 {
            margin-bottom: 20px; /* Add some space below the heading */
            font-size: 36px;
            color: rgba(6, 12, 34, 0.98);
        }

        .table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
            margin-bottom: 20px; /* Add some space below the table */
        }

        th, td {
            border: 1px solid #e9e9e9;
            padding: 12px 15px;
            vertical-align: middle;
        }

        th {
            background-color: rgba(6, 12, 34, 0.98);
           
            color: #fff;
        }

        tr:nth-child(even) {
            background-color: #fcfcfc;
        }

        tr:hover {
            background: #f5f5f5;
        }
    </style>

    <!-- Include template styles -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,700,700i|Raleway:300,400,500,700,800" rel="stylesheet">
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/lib/font-awesome/css/font-awesome.min.css" rel="stylesheet">
    <link href="~/lib/animate/animate.min.css" rel="stylesheet">
    <link href="~/lib/venobox/venobox.css" rel="stylesheet">
    <link href="~/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link href="~/css/style.css" rel="stylesheet">
</head>

<body>
    <h1>List Of Event</h1>

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nom)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Date)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Lieu)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Type)
                </th>
                
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nom)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Lieu)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Type)
                    </td>
                   
                </tr>
            }
        </tbody>
    </table>
</body>
