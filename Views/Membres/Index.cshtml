@model IEnumerable<ahmedHanen.Models.Membre>

@{
    ViewData["Title"] = "Index";
}

<head>
    <link href="~/img/favicon.png" rel="icon">
    <link href="~/img/apple-touch-icon.png" rel="apple-touch-icon">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,700,700i|Raleway:300,400,500,700,800" rel="stylesheet">

    <!-- Bootstrap CSS File -->
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Libraries CSS Files -->
    <link href="~/lib/font-awesome/css/font-awesome.min.css" rel="stylesheet">
    <link href="~/lib/animate/animate.min.css" rel="stylesheet">
    <link href="~/lib/venobox/venobox.css" rel="stylesheet">
    <link href="~/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">

    <!-- Main Stylesheet File -->
    <link href="~/css/style.css" rel="stylesheet">
     <style>
        /* Styles communs pour le corps de la page */
        body {
            font-family: 'Varela Round', sans-serif; /* Use the custom font from the template */
            color: rgba(6, 12, 34, 0.98);
            ;
            background: #f5f5f5;
            font-size: 13px;
        }

        h1 {
            margin-bottom: 20px; /* Add some space below the heading */
            font-size: 36px;
            color: rgba(6, 12, 34, 0.98);
        }

        .table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
            margin-bottom: 20px; /* Add some space below the table */
        }

        th, td {
            border: 1px solid #e9e9e9;
            padding: 12px 15px;
            vertical-align: middle;
        }

        th {
            background-color: rgba(6, 12, 34, 0.98);
            color: #fff;
        }

        tr:nth-child(even) {
            background-color: #fcfcfc;
        }

        tr:hover {
            background: #f5f5f5;
        }

  
        .btn-membre {
            color: #fff;
            background: #f82249;
            padding: 7px 22px;
            border-radius: 50px;
            border: 2px solid #f82249;
            transition: all ease-in-out 0.3s;
            font-weight: 500;
            margin-left: 8px;
            margin-top: 2px;
            line-height: 1;
            font-size: 13px;
            display: block;
            margin-left: auto;
            margin-right: auto;
            margin-top: 20px;
        }
        </style>
</head>
<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AddrMail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MotDePasse)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sexe)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Age)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AddrMail)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MotDePasse)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sexe)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Nom">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Nom">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Nom">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <button class="btn-membre" onclick="window.location.href='/events/liste'">Events</button>
</div>
